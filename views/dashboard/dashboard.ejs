<% include ../partials/header %>


Welcome to dashboard 

  <div class="card-columns">
  <a href="/dashboard/new">Add New Pin</a>
    <% boards.forEach(function(board){ %>
    <% if(user.user.username == board.author.username){ %>
      <div class="card">
        <a href="<%= board.link%>" target="_blank" class="btn btn-board btn-block"><i class="fa fa-thumb-tack" aria-hidden="true" style="color: white"></i> Save</a>
        <img src="<%= board.image %>" alt="" width="100%">
        <div class="card-block">
          <div class="text-left">
            <p class="board"><i class="fa fa-thumb-tack" aria-hidden="true"></i> 5</p>
          </div>
          <h4>
            <%= board.title %>
          </h4>
          <p>
            <%= board.body %>
          </p>
          <div class="row">
            <div class="col-md-6">
              <a href="<%= board.link%>" target="_blank" class="btn btn-primary btn-block">Link to Article</a>
            </div>
            <div class="col-md-6">
              <a href="/board/<%= board._id %>" target="_blank" class="btn btn-success btn-block">View board</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <% }) %>
  </div>



