<% include ../partials/header %>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-sm-12">
    <br>
    <h1 class="title">Add A New Board</h1>
      <form action="/board" method="POST">
        <!--Title-->
        <div class="form-group">
          <input class="form-control" type="text" name="title" placeholder="Title">
        </div>
        <!--Image-->
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Image Url">
        </div>
        <!--Artical-->
        <div class="form-group">
          <input class="form-control" type="text" name="link" placeholder="Artical Link">
        </div>
        <!--Description-->
        <div class="form-group">
          <textarea class="form-control" type="text" name="body" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-block submit-btn" style="cursor: pointer;">Submit!</button>
        </div>
      </form>
      <a href="/board">Go Back</a>
      
    </div>
  </div>

<% include ../partials/footer %>